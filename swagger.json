{
    "openapi": "3.0.0",
    "info": {
        "title": "API de uma rede social",
        "description": "Esta API fornece funcionalidades básicas de uma rede social, permitindo que usuários autentiquem-se, criem posts, comentem em publicações e gerenciem seu conteúdo.",
        "contact": {
            "name": "Anderson S. Gomes",
            "email": "derson3001@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/authenticate": {
            "post": {
                "summary": "Autenticação de usuário",
                "description": "Autentica um usuário e retorna um token de sessão.",
                "tags": ["Autenticação"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/user"
                            },
                            "example": {
                                "email": "email@email.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "token": "seuTokenAqui"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas!"
                    }
                }
            }
        },
        "/token/refresh": {
            "patch": {
                "summary": "Atualização de token",
                "description": "Atualiza o token de autenticação do usuário.",
                "tags": ["Autenticação"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/user"
                            },
                            "example": {
                                "email": "email@email.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "token": "seuTokenAqui"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas!"
                    }
                }
            }
        },
        "/users": {
            "post": {
                "summary": "Criação de usuário",
                "description": "Cria um novo usuário.",
                "tags": ["Usuário"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/user"
                            },
                            "example": {
                                "name": "Anderson Gomes",
                                "email": "email@email.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso!"
                    },
                    "409": {
                        "description": "Usuário já existe!"
                    }
                }
            },
            "get": {
                "summary": "Listar usuários",
                "description": "Retorna uma lista de usuários.",
                "tags": ["Usuário"],
                "responses": {
                    "200": {
                        "description": "Lista de usuários"
                    }
                }
            }
        },
        "/profile": {
            "get": {
                "summary": "Busca o perfil do usuário autenticado",
                "description": "Retorna os dados do usuário autenticado.",
                "tags": ["Usuário"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user"
                                },
                                "example": {
                                    "id": "123e4567-e89b-12d3-a456-426614174000",
                                    "name": "Anderson Gomes",
                                    "email": "email@email.com",
                                    "password": "senhaCriptografada",
                                    "photo": "urlDaFoto"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Token inválido!"
                    }
                }
            }
        },
        "/users/{userId}": {
            "get": {
                "summary": "Buscar usuário por ID",
                "description": "Retorna um usuário específico pelo ID.",
                "tags": ["Usuário"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user"
                                },
                                "example": {
                                    "id": "123e4567-e89b-12d3-a456-426614174000",
                                    "name": "Anderson Gomes",
                                    "email": "email@email.com",
                                    "password": "senhaCriptografada",
                                    "photo": "urlDaFoto"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "summary": "Atualização de usuário",
                "description": "Atualiza os dados de um usuário.",
                "tags": ["Usuário"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/user"
                            },
                            "example": {
                                "email": "emailModificado@email.com"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user"
                                },
                                "example": {
                                    "id": "123e4567-e89b-12d3-a456-426614174000",
                                    "name": "Anderson Gomes",
                                    "email": "emailModificado@email.com",
                                    "password": "senhaCriptografada",
                                    "photo": "urlDaFoto"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Token inválido!"
                    }
                }
            }
        },
        "/users/{userId}/avatar": {
            "patch": {
                "summary": "Atualização de foto de perfil",
                "description": "Atualiza a foto de perfil do usuário.",
                "tags": ["Usuário"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "photo": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "required": ["photo"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Foto de perfil atualizada com sucesso!"
                    },
                    "403": {
                        "description": "Token inválido!"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "user": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    },
                    "photo": {
                        "type": "string"
                    },
                    "comments": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/comment"
                        }
                    },
                    "likes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/like"
                        }
                    },
                    "posts": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/post"
                        }
                    }
                }
            },
            "post": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "photo": {
                        "type": "string",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "userId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "comments": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/comment"
                        }
                    },
                    "likes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/like"
                        }
                    }
                }
            },
            "comment": {
                "type": "obejct",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "content": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "userId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "postId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "likes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/like"
                        }
                    }
                }
            },
            "like": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "userId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "postId": {
                        "type": "string",
                        "format": "uuid",
                        "nullable": true
                    },
                    "commentId": {
                        "type": "string",
                        "format": "uuid",
                        "nullable": true
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}